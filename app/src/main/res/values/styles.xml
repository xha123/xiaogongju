<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:editTextColor">@color/color_333333</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="titleTextColor">@color/black</item>
        <item name="btnTextColor">@color/color_white</item>
        <item name="btnBackGround">@drawable/shape_r5_blue</item>
        <item name="btnBackGroundRound">@drawable/shape_r20_blue</item>
        <item name="headerBackGround">@color/color_blue</item>
        <item name="backImg">@drawable/back</item>
        <item name="moreImg">@drawable/more</item>
    </style>

    <style name="blackTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/color_black6</item>
        <item name="android:textColor">@color/color_8B8BA5</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:editTextColor">@color/color_8B8BA5</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="titleTextColor">@color/white</item>
        <item name="btnTextColor">@color/color_8B8BA5</item>
        <item name="btnBackGround">@drawable/shape_r5_050781</item>
        <item name="btnBackGroundRound">@drawable/shape_r20_050781</item>
        <item name="headerBackGround">@color/color_020349</item>
        <item name="backImg">@drawable/back_white</item>
        <item name="moreImg">@drawable/more_white</item>
    </style>

    <!--自定义button样式-->
    <style name="ButtonStyle" parent="android:style/Widget.TextView">
        <item name="android:textColor">?btnTextColor</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?btnBackGround</item>
        <item name="android:foreground">@drawable/bg_clicker_r5</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:paddingStart">@dimen/dp_15</item>
        <item name="android:paddingEnd">@dimen/dp_15</item>
    </style>

    <!--自定义button样式-->
    <style name="ButtonStyleRound" parent="android:style/Widget.TextView">
        <item name="android:textColor">?btnTextColor</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?btnBackGroundRound</item>
        <item name="android:foreground">@drawable/bg_clicker_r20</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:paddingStart">@dimen/dp_15</item>
        <item name="android:paddingEnd">@dimen/dp_15</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="overlapAnchor">false</item>  <!--设置不覆盖锚点-->
    </style>

    <style name="PopupMenuDialogStyle" parent="@android:style/Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>

    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/popup_menu_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/popup_menu_dialog_out</item>
    </style>

    <!--底部弹出动画-->
    <style name="BottomDialogAnimation" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_out</item>
    </style>


</resources>