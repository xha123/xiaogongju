<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_20"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="技术支持：安安"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvThemeMain"
            style="@style/ButtonStyleRound"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_14"
            android:text="夜间模式"
            app:layout_constraintTop_toBottomOf="@id/tvVideoMain" />

        <TextView
            android:id="@+id/tvWifiMain"
            style="@style/ButtonStyleRound"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_14"
            android:text="apk 快传"
            app:layout_constraintTop_toBottomOf="@+id/textview"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvVideoMain"
            style="@style/ButtonStyleRound"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_14"
            android:text="视频播放"
            app:layout_constraintTop_toBottomOf="@id/tvWifiMain" />


        <TextView
            android:id="@+id/tvHistoryMain"
            style="@style/ButtonStyleRound"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_14"
            android:text="历史上的今天"
            app:layout_constraintTop_toBottomOf="@id/tvThemeMain" />

        <TextView
            android:id="@+id/tvSmileMain"
            style="@style/ButtonStyleRound"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_14"
            android:text="开心一下"
            app:layout_constraintTop_toBottomOf="@id/tvHistoryMain" />

        <TextView
            android:id="@+id/tvOilPriceMain"
            style="@style/ButtonStyleRound"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_14"
            android:text="四川油价"
            app:layout_constraintTop_toBottomOf="@id/tvHistoryMain" />

        <TextView
            android:id="@+id/tvQstBankMain"
            style="@style/ButtonStyleRound"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_14"
            android:text="驾照考试"
            app:layout_constraintTop_toBottomOf="@id/tvHistoryMain" />

        <TextView
            android:id="@+id/tvBijiaMain"
            style="@style/ButtonStyleRound"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_14"
            android:text="比价计算器"
            app:layout_constraintTop_toBottomOf="@id/tvHistoryMain" />

        <TextView
            android:id="@+id/tvMarqueeMain"
            style="@style/ButtonStyleRound"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_14"
            android:text="跑马灯文字"
            app:layout_constraintTop_toBottomOf="@id/tvHistoryMain" />

        <TextView
            android:id="@+id/tvDemoMain"
            style="@style/ButtonStyleRound"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_14"
            android:text="Demo"
            app:layout_constraintTop_toBottomOf="@id/tvHistoryMain" />

    </LinearLayout>

</ScrollView>