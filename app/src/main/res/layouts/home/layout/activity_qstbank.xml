<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_20"
        android:text="请选择车型:" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20">

        <TextView
            android:id="@+id/tvShowC1"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_36"
            android:background="@drawable/selector_qst_filtrate"
            android:gravity="center"
            android:text="C1" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvShowC2"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_36"
            android:background="@drawable/selector_qst_filtrate"
            android:gravity="center"
            android:text="C2" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvShowB1"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_36"
            android:background="@drawable/selector_qst_filtrate"
            android:gravity="center"
            android:text="B1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20">

        <TextView
            android:id="@+id/tvShowB2"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_36"
            android:background="@drawable/selector_qst_filtrate"
            android:gravity="center"
            android:text="B2" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvShowA1"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_36"
            android:background="@drawable/selector_qst_filtrate"
            android:gravity="center"
            android:text="A1" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvShowA2"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_36"
            android:background="@drawable/selector_qst_filtrate"
            android:gravity="center"
            android:text="A2" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_15"
        android:text="请选择科目：" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20">

        <TextView
            android:id="@+id/tvShowSub1"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/selector_qst_filtrate"
            android:gravity="center"
            android:text="科目一" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvShowSub4"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/selector_qst_filtrate"
            android:gravity="center"
            android:text="科目四" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_15"
        android:text="请选择题目数量：" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20">

        <TextView
            android:id="@+id/tvNumber1Qstbank"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_36"
            android:background="@drawable/selector_qst_filtrate"
            android:gravity="center"
            android:text="20题" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvNumber2Qstbank"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_36"
            android:background="@drawable/selector_qst_filtrate"
            android:gravity="center"
            android:text="50题" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvNumber3Qstbank"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_36"
            android:background="@drawable/selector_qst_filtrate"
            android:gravity="center"
            android:text="100题" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tvStartQstBank"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_margin="@dimen/dp_14"
        android:text="模拟考试" />


</LinearLayout>